            else if (dataSource === "SQL") {
                alert("SQL query data source is not implemented yet");
                return false;
            }
            else {
                if (typeof filePath === 'object' && Object.keys(filePath).length === 0) {
                    alert("File name is missing");
                    return false;
                } else {

                    // $.getJSON('/CheckFileExists', { filePath: filePath }, function (response) {
                    //     if (!response.exists) {
                    //         alert("Could not find the data file " + filePath);
                    //     } else {
                    //     }
                    // });
                }
            }
        
         
        });

        // handle checkbox change event
        $('input[type="checkbox"]').change(function () {
            if ($(this).is(':checked')) {
                var selectedID = $(this).attr('id'); // remove "select_" prefix
                unselectAllRows($(this).attr('id'));
                var selectedDatasetID = $(this).data('index');
                var rowIndex = $(this).data('rowindex');
                var selectedRow = $(this).closest('tr');

                var rowData = {
                    id: selectedRow.find('td').eq(0).text(), // Assuming ID is in the first cell
                    dateModel: selectedRow.find('td').eq(1).text(), // Assuming DateModel is in the second cell
                    sNote: selectedRow.find('td').eq(2).text(),
                    sProperty: selectedRow.find('td').eq(3).text(),
                    sDataSource: selectedRow.find('td').eq(4).text()
                };
                console.log(rowData)
                if (rowData.sDataSource === null || rowData.sDataSource === "undefined" || rowData.sDataSource === "") {
                    alert("You must choose a value for Data Source");
                }
                else if (rowData.sDataSource === "SQL") {
                    alert("SQL query data source is not implemented yet");

                }
                else {
                      
                    if (typeof filePath === 'object' && Object.keys(filePath).length === 0) {
                        alert("File name is missing");

                    } else {

                        // $.getJSON('/CheckFileExists', { filePath: filePath }, function (response) {
                        //     if (!response.exists) {
                        //         alert("Could not find the data file " + filePath);
                        //     } else {
                        //     }
                        // });
                    }
                }
                sendIdToServer(selectedID);
            }
        });

        // unselect all other rows
        function unselectAllRows(selectedID) {
            $('input[type="checkbox"]').each(function () {
                if ($(this).attr('id') !== selectedID) {
                    $(this).prop('checked', false);
                }
            });
        }

        // send id to server-side
        function sendIdToServer(gModelsSelectedIndex) {
            $.ajax({
                type: "POST",
                url: "/Admin_Group/AIHome?handler=GModelsSC",
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                data: { gModelsSelectedIndex: gModelsSelectedIndex },
                success: function (response) {
                    console.log('Server response:', response);
                    
                
                   
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                }
            });
        }

        function gNewDataSet() {

            $.ajax({
                type: "POST",
                url: "/Admin_Group/AIHome?handler=GNewAIModel_Click",
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                success: function (response) {
                   location.reload();
                   // console.log('Server response:', response);
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                }
            });


        }
    </script>

}
