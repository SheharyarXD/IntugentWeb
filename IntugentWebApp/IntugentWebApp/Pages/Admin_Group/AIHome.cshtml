            if (checkbox) {

                    checkbox.checked = true;
        
                }
            var dataSource = null;
            var filePath = null;

        @if (Model._objectsService.CDBase != null && Model._objectsService.CDBase.dr != null)
        {
            <text>
                dataSource = @Html.Raw(Json.Serialize(Model._objectsService.CDBase.dr["sDataSource"]));
                filePath = @Html.Raw(Json.Serialize(Model._objectsService.CDBase.dr["sFilePath"]));
            </text>
        }
            if (dataSource === null || dataSource === "undefined" || dataSource === "") {
                alert("You must choose a value for Data Source");
