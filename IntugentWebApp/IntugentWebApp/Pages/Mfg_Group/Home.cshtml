@{
    // if some dataset is already selected.. set its checkbox to checked..
    if (Model.gMfgSearchSelectedIndex != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                var currentId = @Html.Raw(Model.gMfgSearchSelectedIndex);

                if (currentId) {

                    var checkbox = document.getElementById('select_' + currentId);

                    if (checkbox) {
                        checkbox.checked = true;
                    }
                }
            });
        </script>
    }
}

@section Scripts {

    <script>

        // handle checkbox change event
        $('input[type="checkbox"]').change(function () {
            if ($(this).is(':checked')) {
                var selectedID = $(this).attr('id').substring(7); // remove "select_" prefix
                unselectAllRows($(this).attr('id'));
                var selectedDatasetID = $(this).data('index');
                sendIdToServer(selectedID, selectedDatasetID);
            }
        });

        // unselect all other rows
        function unselectAllRows(selectedID) {
            $('input[type="checkbox"]').each(function () {
                if ($(this).attr('id') !== selectedID) {
                    $(this).prop('checked', false);
                }
            });
        }

        // send id to server-side
        function sendIdToServer(selectedID, selectedDatasetID) {
            $.ajax({
                type: "POST",
                url: "/Mfg_Group/Home?handler=DatasetSelected",
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                data: { gMfgSearchSelectedIndex: selectedID, gMfgSearchRowsCount: @Model.gMfgSearch.Count, gMfgSelectedDatasetID: selectedDatasetID },
                success: function (response) {
                    console.log('Server response:', response);
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                }
            });
        }

    </script>
    <script>
        // Function to update hidden inputs before form submission
        function updateHiddenInputs() {
            document.getElementById('hiddentestingStatus').value = document.getElementById('testingStatus').value;
            document.getElementById('hiddendimensionStability').value = document.getElementById('dimensionStability').value;
            document.getElementById('hiddenproductCode').value = document.getElementById('productCode').value;
            document.getElementById('hiddenrunType').value = document.getElementById('runType').value;
            document.getElementById('hiddenafterDate').value = document.getElementById('afterDate').value;
            document.getElementById('hiddenbeforeDate').value = document.getElementById('beforeDate').value;
            document.getElementById('hiddenGroup').value = document.getElementById('Group').value;
            document.getElementById('hiddenAgedRValueSelectedValue').value = document.getElementById('agedRValue').value;
            // Repeat for other select elements...
        }

        // send searchParams form to server-side
        function gSearchDB() {

            updateHiddenInputs();

            var form = $('#SearchParamsForm');

            $.ajax({
                type: "POST",
                url: "/Mfg_Group/Home?handler=SearchDB_Click",
                headers: { "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val() },
                data: form.serialize(),
                success: function (response) {
                    //console.log('Server response:', response);
                    location.reload();
                },
                error: function (xhr, status, error) {
                    console.error('Error:', error);
                }
            });
        }
    </script>
