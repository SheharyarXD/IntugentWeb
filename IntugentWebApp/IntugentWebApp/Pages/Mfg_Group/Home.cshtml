                                @foreach (DataRowView row in Model.gProd1)
                                {
                                    <option value="@row["Product Code"]" selected="@(Model.gProd1SelectedValue == row["Product Code"].ToString())">@row["Product"]</option>
                                }
                            </select>
                            <label for="productCode">Product Code</label>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <!-- Run Type -->
                        <div class="form-floating mb-2">
                            <select class="form-select" id="runType">
                                @foreach (DataRowView row in Model.gRunType1)
                                {
                                    <option value="@row["ID"]" selected="@(Model.gRunType1SelectedValue == (int)row["ID"])">@row["sName"]</option>
                                }
                            </select>
