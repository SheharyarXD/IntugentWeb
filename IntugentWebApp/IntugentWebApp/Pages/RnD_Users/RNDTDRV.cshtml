            <div class="card-header align-items-center">
                <h2 class="">Calculated R Values</h2>
            </div>
            <div class="card-body">
                <table class="table table-sm table-bordered table-hover table-striped table-responsive-md">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">#1</th>
                            <th scope="col">#2</th>
                            <th scope="col">#3</th>
                            <th scope="col">#4</th>
                            <th scope="col">#5</th>
                            <th scope="col">#6</th>
                            <th scope="col">#7</th>
                            <th scope="col">#8</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRowView row in Model.gExpPropsC)
                        {
                            <tr>
                                <td>@row["PropC1"]</td>
                                <td>@row["PropC2"]</td>
                                <td>@row["PropC3"]</td>
                                <td>@row["PropC4"]</td>
